<%= render "shared/second-header" %>

<%= form_with model: @user, url: user_registration_path, class: "user-form", local: true do |f| %>
<div class="form-main">
  <div class="form-header">
   <h1 class="form-user-subject">ユーザー情報入力</h1>
  </div>
 
  <%= render "shared/error-messages", model: f.object %>

  <div class="form-field">
   <div class="form-wrap">
    <label class="form-text">ニックネーム</label>
    <span class="indispensable">必須</span>
   </div>
    <%= f.text_field :nickname, class: "form-input", placeholder:"例) ライブ太郎", maxlength:"30" %>
  </div>
  <div class="form-field">
   <div class="form-wrap">
    <label class="form-text">メールアドレス</label>
    <span class="indispensable">必須</span>
   </div>
   <%= f.email_field :email, class: "form-input", autofocus: true, placeholder:"PC・携帯どちらかでも可" %>
  </div>
  <div class="form-field">
   <div class="form-wrap">
    <label class="form-text">パスワード</label>
    <span class="indispensable">必須</span>
   </div>
   <%= f.password_field :password, class:"form-input", placeholder:"6文字以上の半角英数字" %>
   <p class="form-info">※英字と数字、両方を含めて入力してください</p>
  </div>
  <div class="form-field">
   <div class="form-wrap">
    <label class="form-text">パスワード(確認)</label>
    <span class="indispensable">必須</span>
   </div>
   <%= f.password_field :password_confirmation, class:"form-input", placeholder:"同じパスワードを入力して下さい" %>
  </div> 
  <div class="form-field">
   <div class=form-wrap>
    <label class="form-text">自己紹介文</label>
    <span class="indispensable">必須</span>
   </div>
   <%= f.text_area :introduce, class:"form-input", placeholder:"自己紹介して下さい！" %>
  </div>
  <div class="form-field">
   <div class="form-wrap">
    <label class="form-text">お気に入りアーティスト</label>
    <span class="indispensable">任意</span>
   </div>
   <%= f.text_field :favorite, class:"form-input", placeholder:"好きなアーティストを一人(一組)教えて下さい"%>
  </div>
  <div class="form-field">
   <div class="form-wrap">
    <label class="form-text">性別</label>
    <span class="indispensable">必須</span>
   </div>
   <%= f.collection_select( :sex_id, Sex.all, :id, :name, {}, {class: "user-select"} )%>
   <p class="form-info">※ご自身が思う項目を選んでください</p>
  </div>
  <div class="form-field">
   <div class="form-wrap">
    <label class="form-text">年齢層</label>
    <span class="indispensable">必須</span>
   </div>
   <%= f.collection_select( :age_id, Age.all, :id, :name, {}, {class: "user-select"} )%>
  </div>
  <div class="form-submit">
    <%= f.submit "ユーザー登録", class:"user-submit-btn" %>
  </div>
</div>
<% end %>

