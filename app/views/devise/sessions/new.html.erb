<%= render "shared/second-header" %>

<%= form_with model: @user, url: user_session_path, class:"login-form", local: true do |f| %>
<div class="login-main">
   <div class="form-header">
    <h1 class="form-user-subject">ユーザー情報入力</h1>
   </div>
   <div class="form-field">
    <div class="form-wrap">
     <label class="form-text">メールアドレス</label>
     <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :email, class: "form-input", placeholder:"PC・携帯どちらでも可" %>
   </div>
   <div class="form-field">
    <div class="form-wrap">
     <label class="form-text">パスワード</label>
     <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class: "form-input", placeholder:"6文字以上の半角英数字"%>
   </div>
   <div class="login-submit">
    <%= f.submit "ログインする", class:"user-submit-btn" %>
   </div>
</div>
<% end %>

<%= render "shared/footer" %>