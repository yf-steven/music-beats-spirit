<header>
  <div class= "main-title">
    <%= link_to image_tag('title.png', class: "title-icon"),root_path %>
  </div>
  <div class= "navi">
    <ul class= "right-lists">
     <% if user_signed_in? %>
      <li><%= link_to current_user.nickname, user_path(current_user.id), class:"user-name" %>
      <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class:"logout" %>
     <% else %>
      <li><%= link_to "ログイン", new_user_session_path, class: "login" %></li>
      <li><%= link_to "新規登録", new_user_registration_path, class: "sign-up" %></li>
     <% end %>
    </ul>
  </div>
</header>